<!DOCTYPE html>
<html>
<head>
  <title>Lập trình ứng dụng Web - User Management</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="UTF-8">
  <link href="public/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <script src="public/js/jquery.min.js"></script>
  <script src="public/js/app.js"></script>
  <script src="public/bootstrap/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">
  <nav class="navbar navbar-light bg-white border-bottom mb-4">
    <div class="container">
      <span class="navbar-brand mb-0 h1 text-primary">User Management System</span>
      <form id="logoutForm" method="GET" action="/logout" class="d-inline">
        <button class="btn btn-outline-primary" type="submit">Logout</button>
      </form>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mb-4">
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">User List</h5>
          </div>
          <div class="card-body p-0">
            <div id="userList" class="table-responsive">
              <table class="table table-striped mb-0">
                <thead class="table-light">
                  <tr>
                    <th scope="col">Username</th>
                    <th scope="col">Name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (data && data.length > 0) { %>
                    <% data.forEach(function(val) { %>
                      <tr class="user-id" data-userid="<%= val.id %>">
                        <td class="username"><%= val.username %></td>
                        <td class="name"><%= val.name %></td>
                        <td class="gender"><%= val.gender %></td>
                        <td>
                          <div class="btn-group btn-group-sm" role="group">
                            <button class="update-btn btn btn-outline-primary" data-id="<%= val.id %>">Edit</button>
                            <button class="del-btn btn btn-outline-danger" data-id="<%= val.id %>">Delete</button>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  <% } else { %>
                    <tr>
                      <td colspan="4" class="text-center text-muted py-4">No users found</td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4 mb-4">
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">User Form</h5>
          </div>
          <div class="card-body">
            <form id="createUserForm" method="POST" action="/users/create">
              <input type="hidden" id="user_id" name="user_id">
              <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="username" placeholder="Enter username" required>
              </div>
              <% if (typeof createError !== 'undefined' && createError) { %>
                <div id="createError" class="text-danger mb-2"><%= createError %></div>
              <% } else { %>
                <div id="createError" class="text-danger mb-2" style="display:none"></div>
              <% } %>
              <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name="name" placeholder="Enter full name" required>
              </div>
              <div class="mb-3">
                <label class="form-label d-block">Gender</label>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" id="male" name="gender" value="male" required>
                  <label class="form-check-label" for="male">Male</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" id="female" name="gender" value="female" required>
                  <label class="form-check-label" for="female">Female</label>
                </div>
              </div>
              <div class="d-flex gap-2 mt-4">
                <button id="btn-create" class="btn btn-primary flex-fill" type="button">Create User</button>
                <button id="btn-clear" class="btn btn-outline-secondary" type="reset">Clear</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>